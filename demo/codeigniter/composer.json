{
    "name": "demo/codeigniter",
    "type": "project",
    "description": "CodeIgniter 4 Demo Project",
    "keywords": ["codeigniter", "framework", "demo"],
    "license": "MIT",
    "require": {
        "php": "^8.5",
        "codeigniter4/framework": "^4.6"
    },
    "require-dev": {
        "nowo-tech/composer-update-helper": "*",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "nowo-tech/composer-update-helper": true
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}

