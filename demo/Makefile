# Start Slim demo
slim:
	@echo "‚ö° Starting Slim 5 demo..."
	@cd slim && \
		if [ ! -f .env ]; then cp .env.example .env; fi && \
		docker-compose up -d && \
		echo "‚úÖ Slim demo running at http://localhost:$$(grep PORT .env | cut -d= -f2 || echo 8005)"

# Stop Slim demo
slim-down:
