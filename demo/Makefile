# Start Legacy demo
legacy:
	@echo "üîß Starting Legacy Laravel 5.8 demo..."
	@cd legacy && \
		if [ ! -f .env ]; then cp .env.example .env; fi && \
		docker-compose up -d && \
		echo "‚úÖ Legacy demo running at http://localhost:$$(grep PORT .env | cut -d= -f2 || echo 8006)"

# Stop Legacy demo
