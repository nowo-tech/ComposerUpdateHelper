	@echo "üéØ Starting Symfony 8.0 demo..."
	@cd symfony && \
		if [ ! -f .env ]; then cp .env.example .env; fi && \
		docker-compose up -d && \
		echo "‚úÖ Symfony demo running at http://localhost:$$(grep PORT .env | cut -d= -f2 || echo 8002)"

# Stop Symfony demo
symfony-down:
